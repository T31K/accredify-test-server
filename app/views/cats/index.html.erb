<p id="notice"><%= notice %></p>

<h1>Cats</h1>

<table>
  <thead>
    <tr>
      <th>Breed</th>
      <th>Image</th>
      <th>Description</th>
      <th>Maximum weight</th>
      <th>Average lifespan</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cats.each do |cat| %>
      <tr>
        <td><%= cat.breed %></td>
        <td><%= cat.image %></td>
        <td><%= cat.description %></td>
        <td><%= cat.maximum_weight %></td>
        <td><%= cat.average_lifespan %></td>
        <td><%= cat.location %></td>
        <td><%= link_to 'Show', cat %></td>
        <td><%= link_to 'Edit', edit_cat_path(cat) %></td>
        <td><%= link_to 'Destroy', cat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

